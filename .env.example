# Example environment configuration for 7taps-analytics
# Copy this file to `.env` and update the values for your local setup.

# Connection string for the application's PostgreSQL database
DATABASE_URL=postgresql://user:password@localhost:5432/analytics

# Redis instance used for caching and background jobs
REDIS_URL=redis://localhost:6379/0

# Path to the public key used to verify JWT signatures
PUBLIC_PEM=/path/to/public.pem

# Path to the private key used to sign JWTs
SECRET_PEM=/path/to/secret.pem

# Controls Extract-Transform-Load behavior (e.g., 'batch' or 'stream')
ETL_MODE=batch

# API key for the outbound email service
EMAIL_API_KEY=your-email-api-key
